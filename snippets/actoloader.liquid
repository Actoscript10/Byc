<style>
    /* Splash Screen Styles */
    #videoSplash {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: black;
      z-index: 9999;
      display: flex;
      justify-content: center;
      align-items: center;
      opacity: 1;
      transition: all 0.5s ease-in-out;
    }


  #videoSplash.hidden3 {
    opacity: 0;
    pointer-events: none; /* Prevent interactions while hidden */
  }
    #videoSplash video {
      width: 100%;
      object-fit: cover;
      height: 100%;
      max-width: 100%;
      max-height: 100%;
      overflow: hidden;
    }

    body.splash-active {
      overflow: hidden;
    }

    /* Hidden splash screen class */
    .splash-hidden {
      opacity: 0;
    }

    #shopify-section-as-mobile-bottom {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      z-index: 999;
    }

    /* Responsive styles for mobile devices */
    @media only screen and (max-width: 550px) {
      #desktopVideo {
        display: none;
      }
    }

    @media only screen and (min-width: 551px) {
      #mobileVideo {
        display: none;
      }
    }
</style>

<div id="videoSplash">
  {{ settings.mainvid_desktop | video_tag: autoplay: true, id: 'desktopVideo' }}
  {{ settings.mainvid_mobile | video_tag: autoplay: true, id: 'mobileVideo' }}
</div>
